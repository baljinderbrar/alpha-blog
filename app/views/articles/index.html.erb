<h1 align="center">Listing all Articles</h1>

<% @articles.each do |article| %>
<div class="row">
  <div class="col-xs-12">
    <div class="well well-lg">
      <div>
        <%= link_to article.title, article_path(article), class: "article-title" %>
          <%= link_to "Edit", edit_article_path(article), class: "btn btn-xs" %> |
          <%= link_to "Delete", article_path(article), method: :delete,
                      data: { confirm: "Are you sure you want to delete the article?"},
                      class: "btn btn-xs" %>
        <div class="article-meta-details">
          <small>Created by: <%= article.user.name if article.user %>, 
          <%= time_ago_in_words(article.user.created_at) %>
          Updated at: <%= time_ago_in_words(article.user.updated_at) %>
          </small>
        </div>
      </div>
      
      <div class="article-body">
          <%= truncate(article.description, length: 100) %>
      </div>      
    </div>
  </div>
</div>
<% end %>
  