<%= render 'shared/errors', objError: @article %>

<div class="row">
  <div class="col-xs-12">
    
  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
        <%= f.label :title, class: "col-sm-2 control-label" %> 
        <div class="col-sm-10">
          <%= f.text_field :title, class: "control-field", placeholder: "Article Title", autofocus: true %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :description, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :description, rows: 10, class: "control-field", placeholder: "Article description" %>
        </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    

  <% end %>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      [ <%= link_to "Cancel and return to Article listing", articles_path %> ]
    </div>
  </div>
  
  </div>
</div>